<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:titleTextColor="?attr/colorOnPrimary"
        app:navigationIconTint="?attr/colorOnPrimary" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- App Icon -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:src="@mipmap/ic_launcher"
                android:contentDescription="App Icon" />

            <!-- App Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:text="VedInsta"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                android:textAlignment="center" />

            <!-- Version -->
            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:text="Version 1.0.0"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <!-- Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:text="VedInsta is a powerful Instagram downloader app that helps you save photos and videos from Instagram posts, stories, and reels directly to your device."
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:textAlignment="center"
                android:lineSpacingExtra="4dp" />

            <!-- Buttons -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_github"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="View on GitHub"
                app:icon="@drawable/ic_github"
                style="@style/Widget.Material3.Button.OutlinedButton.Icon" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_report_issue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Report an Issue"
                app:icon="@drawable/ic_bug_report"
                style="@style/Widget.Material3.Button.OutlinedButton.Icon" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_developer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:text="Developer Profile"
                app:icon="@drawable/ic_person"
                style="@style/Widget.Material3.Button.OutlinedButton.Icon" />

            <!-- Copyright -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Â© 2024 DevSon1024. All rights reserved."
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textAlignment="center"
                android:textColor="?attr/colorOnSurfaceVariant" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>